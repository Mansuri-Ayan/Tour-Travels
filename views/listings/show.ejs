    <!-- @format -->

<% layout("/layouts/boilerplate") -%>

<body>
  <div class="row">
    <div class="col-8 mt-4" style="margin: auto">
      <h3><%= listing.title %></h3>
    </div>
    <div class="col-8" style="margin: auto">
      <div class="card listing-card mb-4">
        <img
          class="show-image card-img-top"
          src="<%= listing.image.url %>"
          alt="listing iamge"
        />
        <div class="card-body mt-3">
          <p class="card-text">
            <i>@ <%= listing.owner.username %> <br /> </i>
            <%= listing.description %> <br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
            <%= listing.location %> <br />
            <%= listing.country %>
          </p>
        </div>
      </div>
    </div>
    <% if (currUser && currUser._id.equals(listing.owner._id)) {%>
    <div class="btns col-8 mb-3" style="margin: auto">
      <a
        style="width: 80px"
        href="/listings/<%=listing.id%>/edit"
        class="btn btn-dark edit-btn"
        >Edit</a
      >
      <form method="post" action="/listings/<%=listing.id%>?_method=Delete">
        <button class="btn btn-dark offset-4">Delete</button>
      </form>
    </div>
    <%} %>
  </div>
  <% if(currUser){ %>

  <div class="col-8" style="margin: auto">
    <hr />
    <h4 class="text-center">Leave a Review</h4>

    <form
      action="/listings/<%=listing.id%>/reviews"
      method="post"
      class="mb-3 needs-validation"
      novalidate
    >
      <div class="mb-3 mt-3">
        <label for="rating">Rating:</label>
        <fieldset class="starability-growRotate">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            value="1"
            name="review[rating]"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="second-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="second-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="second-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="second-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="second-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="second-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="second-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="second-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="second-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="second-rate5" title="Amazing">5 stars</label>
        </fieldset>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a short Description</div>
      </div>

      <div class="mb-3">
        <label for="comment">Comment</label>
        <textarea
          class="form-control"
          name="review[comment]"
          id="comment"
          required
          rows="5"
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please add some commets for review.</div>
      </div>
      <button style="width: 80px" class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
  <% }%> <% if(listing.reviews.length>0){ %>
  <div class="col-8" style="margin: auto">
    <hr />
    <h1 class="text-center"></h1>

    <h4><b>All Reviews</b></h4>
    <div class="row row-cols-lg-2 row-cols-md-2 row-cols-sm-1 mb-3">
      <% for(let review of listing.reviews){ %>
      <div>
        <div class="card mt-3">
          <div class="card-body">
            <b>
              <h6 class="card-title">@<%= review.author.username %></h6>
            </b>

            <p
              class="starability-result"
              data-rating="<%= review.rating %>"
            ></p>
            <div class="card-text"><%= review.comment %></div>
          </div>
          <form
            method="post"
            action="/listings/<%=listing.id%>/reviews/<%= review.id %>?_method=Delete"
            class="mb-2 ms-2 mt-2"
          >
            <% if (currUser && currUser._id.equals(review.author._id)||currUser._id.equals("67657d61d533883ae6d28845")) {%>
            <button class="btn btn-dark">Delete</button>
            <%}%>
          </form>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  <% } %>
</script>
