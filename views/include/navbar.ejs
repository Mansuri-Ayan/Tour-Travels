<nav
  style="height: fit-content !important"
  class="navbar navbar-expand-md bg-body-light border-bottom sticky-top bg-white"
>
  <div class="container-fluid" style="position: relative">
    <a class="navbar-brand" href="/listings">
      <i class="fa-duotone fa-solid fa-compass-drafting"></i>
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse bg-white" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <!-- <i class="fa-sharp fa-solid fa-compass"></i> -->
        <a class="nav-link" href="/listings">Explore </a>
        <% if (currUser && currUser._id.equals("67657d61d533883ae6d28845")){%>
        <a class="nav-link" href="/listings/new">Add&nbsp;your&nbsp;home</a>
        <%}%>
      </div>
      <div class="navbar-nav ms-auto mb-2">
        <form class="d-flex" role="search">
          <input
            class="form-control search-input me-2"
            type="search"
            placeholder="Search destinations"
            aria-label="Search"
          />
          <button
            class="btn edit-btn btn-search d-flex justify-content-center align-items-center"
            type="submit"
          >
            <i class="fa-solid fa-magnifying-glass"></i> &nbsp;&nbsp;
            <span> Search</span>
          </button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <div
          class="row row-cols-sm-2 row-cols-md-2 ms-auto"
          style="margin-right: 20px"
        >
          <% if (!currUser) { %>
          <a class="nav-link" href="/signup">Sign&nbsp;up</a>
          <a href="/login"
            ><button class="btn btn-outline-dark" style="border-radius: 20px">
              Log&nbsp;in
            </button></a
          >
          <% } else{ %>
          <a href="/logout"
            ><button class="btn btn-outline-dark" style="border-radius: 20px">
              Log&nbsp;out
            </button></a
          >
          <% }%>
        </div>
      </div>
    </div>
